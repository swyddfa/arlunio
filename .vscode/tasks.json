{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Blog",
            "type": "shell",
            "command": "${config:python.pythonPath} gallery.py ${input:blogArgs}",
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceRoot}/blog"
            }
        },
        {
            "label": "Jupyter",
            "type": "shell",
            "command": "source ${workspaceRoot}/.env/bin/activate && jupyter-lab ${input:jupyterArgs}",
            "problemMatcher": [],
            "group": "build",
            "isBackground": true,
            "options": {
                "cwd": "${input:jupyterWd}"
            }
        },
        {
            "label": "Preview Blog",
            "type": "shell",
            "command": "${config:python.pythonPath} -m http.server 8001",
            "problemMatcher": [],
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/blog/public"
            }
        },
        {
            "label": "Sphinx",
            "type": "shell",
            "command": "source ${workspaceRoot}/.env/bin/activate && make ${input:builder}",
            "problemMatcher": [],
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/docs"
            }
        },
        {
            "label": "Tox",
            "type": "shell",
            "command": "${config:python.pythonPath} -m tox ${input:toxArgs}",
            "problemMatcher": [
                {
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}"
                    ],
                    "pattern": [
                        {
                            "regexp": "(.*):(\\d+): in (.*)",
                            "file": 1,
                            "line": 2,
                        },
                        {
                            "regexp": "\\s+(.*)",
                            "code": 1
                        },
                        {
                            "regexp": "([E])\\s+(.*)",
                            "severity": 1,
                            "message": 2
                        }
                    ]
                }
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ],
    "inputs": [
        {
            "id": "toxArgs",
            "description": "Tox Environment",
            "type": "pickString",
            "options": [
                {
                    "label": "Python 3.6",
                    "value": "-e py36"
                },
                {
                    "label": "Python 3.7",
                    "value": "-e py37"
                },
                {
                    "label": "Python 3.8",
                    "value": "-e py38"
                },
                {
                    "label": "Python 3.6 (recreate)",
                    "value": "-r -e py36"
                },
                {
                    "label": "Python 3.7 (recreate)",
                    "value": "-r -e py37"
                },
                {
                    "label": "Python 3.8 (recreate)",
                    "value": "-r -e py38"
                }
            ],
            "default": "-e py38"
        },
        {
            "id": "builder",
            "description": "Sphinx builders",
            "type": "pickString",
            "default": "html",
            "options": [
                {
                    "label": "Build HTML Docs",
                    "value": "html"
                },
                {
                    "label": "Build Gallery",
                    "value": "nbgallery"
                },
                {
                    "label": "Build Tutorial",
                    "value": "nbtutorial"
                },
                {
                    "label": "Test Examples",
                    "value": "doctest"
                },
                {
                    "label": "Test Links",
                    "value": "linkcheck"
                }
            ]
        },
        {
            "id": "blogArgs",
            "description": "Blog Arguments",
            "type": "pickString",
            "default": "--local",
            "options": [
                {
                    "label": "Local",
                    "value": "--local"
                },
                {
                    "label": "Local, skipping errors",
                    "value": "--local --skip-failures"
                },
                {
                    "label": "Local, debug",
                    "value": "-vv --local"
                },
                {
                    "label": "Local, debug, skipping errors",
                    "value": "-vv --local --skip-failures"
                }
            ]
        },
        {
            "id": "jupyterArgs",
            "description": "Jupyter Arguments",
            "type": "pickString",
            "default": "",
            "options": [
                {
                    "label": "Headless",
                    "value": "--no-browser"
                },
                {
                    "label": "In Browser",
                    "value": ""
                }
            ]
        },
        {
            "id": "jupyterWd",
            "description": "Working directory for jupyter",
            "type": "pickString",
            "default": ".scratch",
            "options": [
                {
                    "label": "Scratch Folder",
                    "value": ".scratch"
                },
                {
                    "label": "Gallery",
                    "value": "blog/src/gallery"
                },
                {
                    "label": "Tutorial",
                    "value": "docs/_build/nbtutorial"
                }
            ]
        }
    ]
}